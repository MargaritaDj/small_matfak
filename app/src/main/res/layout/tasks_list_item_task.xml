<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="140dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/task_item_date"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:drawablePadding="40dp"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        />

    <ImageView
        android:id="@+id/task_item_background"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/task_item_date"
        android:background="@drawable/background_item_task"
        />

    <TextView
        android:id="@+id/task_item_text"
        android:layout_width="280dp"
        android:layout_height="75dp"
        android:paddingHorizontal="15dp"
        android:layout_alignTop="@id/task_item_background"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="Кенгуру мама прыгает за 1 секунду на 3 метра, а её маленький сынишка прыгает на 1 метр за 0,5 секунды.Они одновременно стартовали от"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:maxLines="4"
        android:ellipsize="end"
        />

    <ImageButton
        android:id="@+id/task_item_open_button"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_below="@id/task_item_text"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_alignStart="@+id/task_item_background"
        android:background="@drawable/button_menu"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_below="@id/task_item_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_alignStart="@+id/task_item_background"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:shadowDx="5"
        android:text="@string/open"
        android:gravity="center_horizontal"
        android:paddingTop="3dp"
        />

    <ImageView
        android:id="@+id/task_item_mark"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/task_item_text"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:layout_alignEnd="@+id/task_item_background"
        />

</RelativeLayout>