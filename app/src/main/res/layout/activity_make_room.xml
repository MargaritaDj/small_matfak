<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/make_room_background"
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:background="@color/grey_blue"
        android:layout_centerInParent="true"
        android:alpha="0.7">
    </ImageView>

    <TextView
        android:id="@+id/make_room_password"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_alignTop="@id/make_room_background"
        android:background="@color/white"
        android:hint="@string/password"
        android:textColorHint="@color/color_hint"
        android:textSize="15sp"
        android:paddingStart="20dp">
    </TextView>

    <Button
        android:id="@+id/personal_area_teacher_make_room"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignTop="@id/make_room_password"
        android:layout_centerInParent="true"
        android:layout_marginTop="90dp"
        android:backgroundTint="@color/color_buttons"
        android:text="@string/make_room"
        android:textSize="17sp"
        android:textStyle="bold"
        app:cornerRadius="0dp">
    </Button>

</RelativeLayout>