<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageButton
        android:id="@+id/personal_area_student_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/setting"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/personal_area_student_background"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignTop="@id/personal_area_student_hero"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/background_area" />


    <ImageButton
        android:id="@+id/personal_area_student_hero"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="SpeakableTextPresentCheck"
        />

    <TextView
        android:id="@+id/personal_area_student_name"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/personal_area_student_hero"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:letterSpacing="0.07"
        android:textStyle="bold"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:text="Иван">
    </TextView>

    <TextView
        android:id="@+id/personal_area_student_last_name"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/personal_area_student_name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:letterSpacing="0.07"
        android:textStyle="bold"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:text="Иванов"
        />

    <TextView
        android:id="@+id/personal_area_student_level"
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:layout_below="@id/personal_area_student_last_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:letterSpacing="0.07"
        android:textStyle="bold"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:text=""
        />

    <TextView
        android:id="@+id/personal_area_student_level_count"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/personal_area_student_last_name"
        android:layout_alignEnd="@id/personal_area_student_background"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:letterSpacing="0.07"
        android:textStyle="bold"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:text=""
        />

    <ImageView
        android:id="@+id/personal_area_student_image_progress_bar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@id/personal_area_student_level_count"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/progress_bar"
        />

    <ProgressBar
        android:id="@+id/personal_area_student_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@id/personal_area_student_level_count"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:max="7"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:progress="5"
        android:progressTint="@color/progress_bar"
        android:scaleY="2" />

    <TextView
        android:id="@+id/personal_area_student_score"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@id/personal_area_student_image_progress_bar"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/minecraftia_regular"
        android:letterSpacing="0.07"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/personal_area_student_play"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/personal_area_student_background"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/personal_area_student_background"
        android:layout_centerInParent="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/minecraftia_regular"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:shadowColor="@color/black"
        android:shadowDx="10"
        android:shadowRadius="5"
        android:text="@string/play"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/personal_area_student_regulations_game"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/personal_area_student_play"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/personal_area_student_play"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:text="@string/regulations_game"
        android:textSize="28sp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:shadowDx="10"
        android:textStyle="bold"
        android:paddingTop="10dp"
        />

    <ImageButton
        android:id="@+id/personal_area_student_logout"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/personal_area_student_regulations_game"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/personal_area_student_regulations_game"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:text="@string/exit"
        android:textSize="28sp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:shadowDx="10"
        android:textStyle="bold"
        android:paddingTop="10dp"
        />

</RelativeLayout>