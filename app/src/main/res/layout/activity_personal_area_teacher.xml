<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/personal_area_teacher_logout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/exit"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">
    </ImageButton>

    <TextView
        android:id="@+id/personal_area_teacher_area"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:letterSpacing="0.07"
        android:text="@string/personal_area"
        >
    </TextView>

    <ImageButton
        android:id="@+id/personal_area_teacher_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/menu"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/personal_area_teacher_buttons"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@id/personal_area_teacher_hero"
        android:layout_alignBottom="@id/personal_area_teacher_regulations_game_shadow"
        android:layout_marginBottom="-12dp"
        android:alpha="0.7"
        android:background="@color/grey_blue">
    </ImageView>

    <ImageButton
        android:id="@+id/personal_area_teacher_hero"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/feiry"
        tools:ignore="SpeakableTextPresentCheck"
        />

    <TextView
        android:id="@+id/personal_area_teacher_last_name"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/personal_area_teacher_hero"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.07"
        android:textStyle="bold"
        android:text=""
        >
    </TextView>

    <TextView
        android:id="@+id/personal_area_teacher_name"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/personal_area_teacher_last_name"
        android:layout_marginTop="-10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.07"
        android:textStyle="bold"
        android:text=""
        >
    </TextView>

    <TextView
        android:id="@+id/personal_area_teacher_patronymic"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/personal_area_teacher_name"
        android:layout_marginTop="-10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.07"
        android:textStyle="bold"
        android:text=""
        >
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="258dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/shadow_button"
        android:layout_alignStart="@+id/personal_area_teacher_make_room"
        android:layout_alignTop="@+id/personal_area_teacher_make_room"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="0dp"
        />

    <Button
        android:id="@+id/personal_area_teacher_make_room"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@id/personal_area_teacher_patronymic"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/color_buttons"
        android:text="@string/make_room"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:cornerRadius="0dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="258dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/shadow_button"
        android:layout_alignStart="@+id/personal_area_teacher_list_tasks"
        android:layout_alignTop="@+id/personal_area_teacher_list_tasks"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="0dp"
        />

    <Button
        android:id="@+id/personal_area_teacher_list_tasks"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@id/personal_area_teacher_make_room"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/color_buttons"
        android:text="@string/list_tasks"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/white"
        app:cornerRadius="0dp">
    </Button>

    <androidx.cardview.widget.CardView
        android:id="@+id/personal_area_teacher_regulations_game_shadow"
        android:layout_width="258dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/shadow_button"
        android:layout_alignStart="@+id/personal_area_teacher_regulations_game"
        android:layout_alignTop="@+id/personal_area_teacher_regulations_game"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="0dp"
        />

    <Button
        android:id="@+id/personal_area_teacher_regulations_game"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@id/personal_area_teacher_list_tasks"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/color_buttons"
        android:text="@string/regulations_game"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/white"
        app:cornerRadius="0dp">
    </Button>

</RelativeLayout>