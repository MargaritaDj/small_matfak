<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:scaleType="center">

    <ImageView
        android:id="@+id/solve_task_student_background"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:background="@drawable/background_list_tasks"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:id="@+id/solve_task_student_cross"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@id/solve_task_student_background"
        android:layout_alignTop="@id/solve_task_student_background"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cross"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/solve_task_student_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@id/solve_task_student_background"
        android:layout_alignTop="@id/solve_task_student_background"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/arrow_back"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/solve_task_student_title_solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/solve_task"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:layout_below="@id/solve_task_student_back"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@id/solve_task_student_background"
        android:layout_marginStart="30dp"
        />

    <ImageView
        android:id="@+id/solve_task_student_background_solve"
        android:layout_width="290dp"
        android:layout_height="390dp"
        android:layout_below="@+id/solve_task_student_title_solve"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_solve"
        />

    <TextView
        android:id="@+id/solve_task_student_solve_text"
        android:layout_width="290dp"
        android:layout_height="390dp"
        android:layout_below="@+id/solve_task_student_title_solve"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:text=""
        />

    <ImageView
        android:id="@+id/solve_task_student_background_answer"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_below="@id/solve_task_student_background_solve"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_answer"
        />

    <TextView
        android:id="@+id/solve_task_student_right_answer"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_alignStart="@id/solve_task_student_background_answer"
        android:layout_alignTop="@id/solve_task_student_background_answer"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:letterSpacing="0.07"
        android:textAllCaps="true"
        android:fontFamily="@font/minecraftia_regular"
        android:maxLines="1"
        android:text=""
        />

    <TextView
        android:id="@+id/solve_task_student_answer"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_alignStart="@id/solve_task_student_background_answer"
        android:layout_below="@id/solve_task_student_right_answer"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:maxLines="1"
        android:text=""
        />
</RelativeLayout>