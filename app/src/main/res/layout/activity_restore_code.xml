<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scaleType="center"
    tools:context=".screens.RestoreCodeActivity">

    <ImageView
        android:id="@+id/restore_activity_background_login"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:alpha="0.7"
        android:layout_centerInParent="true"
        android:background="@color/grey_blue"
        tools:ignore="MissingConstraints"
        />

    <ImageButton
        android:id="@+id/restore_activity_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@id/restore_activity_background_login"
        android:layout_alignTop="@id/restore_activity_background_login"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/restore_activity_home"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/home"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/restore_activity_restore_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/code_from_sms"
        android:layout_alignTop="@id/restore_activity_background_login"
        android:layout_centerHorizontal="true"
        android:textSize="21sp"
        android:textColor="@color/color_hint"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/restore_activity_cell_code1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restore_activity_restore_password"
        android:layout_alignStart="@id/restore_activity_background_login"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@android:color/transparent"
        app:boxStrokeWidth="3dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/restore_activity_cell_code1_text"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingTop="0dp"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:textSize="50sp"
        android:maxLength="1"
        tools:ignore="SpeakableTextPresentCheck"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/restore_activity_cell_code2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restore_activity_restore_password"
        android:layout_toEndOf="@id/restore_activity_cell_code1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@android:color/transparent"
        app:boxStrokeWidth="3dp">
    <EditText
        android:id="@+id/restore_activity_cell_code2_text"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:paddingStart="15dp"
        android:paddingTop="0dp"
        android:textSize="50sp"
        android:maxLength="1"
        tools:ignore="SpeakableTextPresentCheck"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/restore_activity_cell_code3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restore_activity_restore_password"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/restore_activity_cell_code2"
        app:errorEnabled="true"
        app:errorIconDrawable="@android:color/transparent"
        app:boxStrokeWidth="3dp">

    <EditText
        android:id="@+id/restore_activity_cell_code3_text"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingTop="0dp"
        android:textSize="50sp"
        android:maxLength="1"
        tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/restore_activity_cell_code4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restore_activity_restore_password"
        android:layout_toEndOf="@id/restore_activity_cell_code3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:errorEnabled="true"
        app:errorIconDrawable="@android:color/transparent"
        app:boxStrokeWidth="3dp">

    <EditText
        android:id="@+id/restore_activity_cell_code4_text"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingTop="0dp"
        android:textSize="50sp"
        android:maxLength="1"
        tools:ignore="SpeakableTextPresentCheck"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="218dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/shadow_button"
        android:layout_alignStart="@id/restore_activity_change_button"
        android:layout_alignTop="@id/restore_activity_change_button"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="0dp"
        />

    <Button
        android:id="@+id/restore_activity_change_button"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/restore_activity_cell_code1"
        android:backgroundTint="@color/color_buttons"
        android:text="@string/change_password"
        android:textStyle="bold"
        android:textSize="17sp"
        app:cornerRadius="0dp"
        />

</RelativeLayout>