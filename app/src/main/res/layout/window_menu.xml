<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/menu_background"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/background_menu"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:id="@+id/menu_cross"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/menu_background"
        android:layout_alignEnd="@id/menu_background"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/cross"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


    <ListView
        android:id="@+id/menu_list"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_below="@id/menu_cross"
        android:layout_alignStart="@id/menu_background"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        />

    <ImageButton
        android:id="@+id/menu_choose"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/menu_background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_menu"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/menu_background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:shadowDx="10"
        android:text="@string/choose"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        />
</RelativeLayout>
