<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:scaleType="center">

    <ImageView
        android:id="@+id/about_task_student_background"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:background="@drawable/background_list_tasks"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:id="@+id/about_task_student_cross"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@id/about_task_student_background"
        android:layout_alignTop="@id/about_task_student_background"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cross"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/about_task_student_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@id/about_task_student_background"
        android:layout_alignTop="@id/about_task_student_background"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/arrow_back"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    
    <ImageView
        android:id="@+id/about_task_student_mark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/about_task_student_back"
        android:layout_alignStart="@id/about_task_student_background"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        />
    
    <TextView
        android:id="@+id/about_task_student_mark_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:layout_below="@id/about_task_student_back"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@id/about_task_student_mark"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/about_task_student_title_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/condition_task"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:layout_below="@id/about_task_student_mark"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@id/about_task_student_background"
        android:layout_marginStart="30dp"
        />

    <ImageView
        android:id="@+id/about_task_student_background_condition"
        android:layout_width="290dp"
        android:layout_height="330dp"
        android:layout_below="@+id/about_task_student_title_condition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_condition"
        />

    <TextView
        android:id="@+id/about_task_student_condition_text"
        android:layout_width="290dp"
        android:layout_height="330dp"
        android:layout_below="@+id/about_task_student_title_condition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:text=""
        />

    <ImageButton
        android:id="@+id/about_task_student_solve"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_below="@id/about_task_student_condition_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_menu"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerRadius="0dp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_below="@id/about_task_student_condition_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:shadowDx="10"
        android:text="@string/solve"
        android:gravity="center"
        android:paddingTop="5dp"
        />

</RelativeLayout>