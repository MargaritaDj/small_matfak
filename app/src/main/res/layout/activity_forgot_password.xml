<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:scaleType="center"
    tools:context=".ui.screens.forgotpassword.view.ForgotPasswordActivity">

    <ImageView
        android:id="@+id/forgot_activity_background_login"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_window"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/forgot_activity_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@id/forgot_activity_background_login"
        android:layout_alignTop="@id/forgot_activity_background_login"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/arrow_back"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/forgot_activity_phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:textAllCaps="true"
        android:layout_below="@id/forgot_activity_back"
        android:layout_alignStart="@id/forgot_activity_background_login"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgot_activity_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/forgot_activity_phone_text_view"
        android:layout_marginTop="10dp"
        app:errorEnabled="true"
        app:hintAnimationEnabled="false"
        app:errorTextAppearance="@style/ErrorText"
        app:errorIconDrawable="@android:color/transparent"
        >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/forgot_activity_phone_text"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:backgroundTint="@android:color/transparent"
        android:inputType="phone"
        android:maxLength="12"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/minecraftia_regular"
        tools:ignore="SpeakableTextPresentCheck"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <ImageButton
        android:id="@+id/forgot_activity_get_button"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/forgot_activity_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_menu"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerRadius="0dp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@id/forgot_activity_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:letterSpacing="0.07"
        android:fontFamily="@font/minecraftia_regular"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:shadowColor="@color/black"
        android:shadowRadius="5"
        android:shadowDx="10"
        android:text="@string/get_code"
        android:gravity="center"
        android:paddingTop="5dp"
        />

</RelativeLayout>